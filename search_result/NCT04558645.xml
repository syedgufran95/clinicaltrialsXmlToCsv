  <primary_outcome>
    <measure>Physical activity level</measure>
    <time_frame>Five minutes</time_frame>
    <description>Physical activity level using International Physical Activity Questionnaire - Short Form (IPAQ-SF) will be evaluated.</description>
  </primary_outcome>
  <primary_outcome>
    <measure>General Quality of life</measure>
    <time_frame>Ten minutes</time_frame>
    <description>Quality of life using Short Form Health Survey (SF-36) will be evaluated.</description>
  </primary_outcome>
  <secondary_outcome>
    <measure>Depression</measure>
    <time_frame>Three minutes</time_frame>
    <description>Depression using Hospital Anxiety and Depression Scale will be evaluated.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Anxiety</measure>
    <time_frame>Three minutes</time_frame>
    <description>Anxiety using Hospital Anxiety and Depression Scale will be evaluated.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Self-reported hypoglycemia</measure>
    <time_frame>Last seven day</time_frame>
    <description>It will be questioned how many times patients have had hypoglycemic attacks (&lt;4 mmol/L and common symptoms) in the last 7 days.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Loneliness</measure>
    <time_frame>Three minutes</time_frame>
    <description>Loneliness using UCLA Loneliness Scale Short Form (ULS-8) will be evaluated.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Hypoglisemia fear</measure>
    <time_frame>Five minutes</time_frame>
    <description>Hypoglisemia fear using Hypoglisemia Fear Survey (HFS) will be evaluated.</description>
  </secondary_outcome>
  <secondary_outcome>
    <measure>Dyspnea</measure>
    <time_frame>Two minutes</time_frame>
    <description>Dyspnea during daily life activites using Modified Medical Research Dyspnea Scale will be evaluated.</description>
  </secondary_outcome>
