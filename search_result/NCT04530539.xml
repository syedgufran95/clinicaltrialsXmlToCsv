  <brief_title>The Effect of Melatonin and Vitamin C on COVID-19</brief_title>
  <official_title>The Effect of Melatonin and Vitamin C on COVID-19</official_title>
  <sponsors>
    <lead_sponsor>
      <agency>Lancaster General Hospital</agency>
